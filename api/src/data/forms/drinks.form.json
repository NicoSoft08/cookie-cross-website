{
    "slug": "drinks",
    "fields": [
        {
            "type": "text",
            "label": "Titre de l’annonce",
            "name": "title",
            "placeholder": "Ex : Jus de mangue naturel 1 L",
            "required": true,
            "validation": {
                "minLength": 10,
                "maxLength": 120
            }
        },
        {
            "key": "drinkCategory",
            "label": "Catégorie de boisson",
            "type": "select",
            "required": true,
            "options": [
                "Boissons alcoolisées",
                "Boissons non alcoolisées",
                "Jus et nectars",
                "Thé",
                "Café",
                "Boissons lactées",
                "Compléments sportifs",
                "Boissons énergisantes",
                "Eaux minérales"
            ]
        },
        {
            "key": "brand",
            "label": "Marque / Fabricant",
            "type": "text",
            "required": false
        },
        {
            "key": "productName",
            "label": "Nom de la boisson",
            "type": "text",
            "required": true
        },
        {
            "key": "volume",
            "label": "Volume (ml / L)",
            "type": "number",
            "required": true,
            "min": 1
        },
        {
            "key": "quantity",
            "label": "Quantité",
            "type": "number",
            "required": true,
            "min": 1
        },
        {
            "key": "price",
            "label": "Prix (FCFA)",
            "type": "number",
            "required": true,
            "min": 200
        },
        {
            "key": "alcoholContent",
            "label": "Teneur en alcool (%)",
            "type": "number",
            "required": false,
            "min": 0
        },
        {
            "key": "expirationDate",
            "label": "Date d’expiration",
            "type": "date",
            "required": true
        },
        {
            "key": "storageConditions",
            "label": "Conditions de conservation",
            "type": "text",
            "required": false
        },
        {
            "key": "delivery",
            "label": "Mode de livraison",
            "type": "select",
            "required": true,
            "options": [
                "Retrait en main propre",
                "Livraison par coursier",
                "Livraison par transporteur",
                "Pas de livraison"
            ]
        },
        {
            "key": "photos",
            "label": "Photos",
            "type": "file",
            "multiple": true,
            "accept": "image/*",
            "required": false
        },
        {
            "key": "description",
            "label": "Description",
            "type": "textarea",
            "required": false,
            "placeholder": "Description du goût, ingrédients, origine ou tout détail utile"
        }
    ]
}
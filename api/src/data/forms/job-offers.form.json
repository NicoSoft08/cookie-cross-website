{
    "slug": "job-offers",
    "fields": [
        {
            "type": "text",
            "label": "Titre de l’annonce",
            "name": "title",
            "placeholder": "Ex: Développeur full-stack junior",
            "required": true,
            "validation": {
                "minLength": 10,
                "maxLength": 120
            }
        },
        {
            "type": "text",
            "label": "Poste",
            "name": "position",
            "placeholder": "Ex: Ingénieur logiciel",
            "required": true
        },
        {
            "type": "text",
            "label": "Entreprise",
            "name": "company",
            "placeholder": "Ex: AdsCity Technologies",
            "required": true
        },
        {
            "type": "text",
            "label": "Localisation",
            "name": "location",
            "placeholder": "Ex: Aboisso",
            "required": true,
            "options": []
        },
        {
            "type": "number",
            "label": "Salaire mensuel (FCFA)",
            "name": "salary",
            "placeholder": "Ex: 300000",
            "required": false,
            "min": 0,
            "step": 1000
        },
        {
            "type": "select",
            "label": "Expérience requise",
            "name": "experience",
            "required": true,
            "options": [
                "Débutant",
                "1-3 ans",
                "3-5 ans",
                "5 ans et plus"
            ]
        },
        {
            "type": "select",
            "label": "Type de contrat",
            "name": "employmentType",
            "required": true,
            "options": [
                "CDI",
                "CDD",
                "Freelance",
                "Stage",
                "Temps partiel"
            ]
        },
        {
            "type": "select",
            "label": "Niveau d’étude minimum",
            "name": "education",
            "required": false,
            "options": [
                "Aucun diplôme requis",
                "BEP/CAP",
                "BAC",
                "BAC+2",
                "BAC+3",
                "BAC+5 et plus"
            ]
        },
        {
            "type": "textarea",
            "label": "Compétences recherchées",
            "name": "skills",
            "placeholder": "Ex: JavaScript, React, Node.js",
            "required": true
        },
        {
            "type": "textarea",
            "label": "Responsabilités",
            "name": "responsibilities",
            "placeholder": "Décrivez les missions principales du poste",
            "required": true
        },
        {
            "type": "textarea",
            "label": "Avantages",
            "name": "benefits",
            "placeholder": "Ex: Tickets restaurant, mutuelle...",
            "required": false
        },
        {
            "type": "date",
            "label": "Date limite de candidature",
            "name": "applicationDeadline",
            "required": false
        },
        {
            "type": "checkbox",
            "label": "Langues exigées",
            "name": "languageRequirements",
            "required": false,
            "options": [
                "Français",
                "Anglais",
                "Allemand",
                "Espagnol"
            ]
        }
    ]
}
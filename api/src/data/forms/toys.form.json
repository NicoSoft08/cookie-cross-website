{
    "slug": "toys",
    "fields": [
        {
            "type": "text",
            "label": "Titre de l’annonce",
            "name": "title",
            "placeholder": "Ex: Circuit de voiture électrique pour enfants 3-6 ans",
            "required": true,
            "validation": {
                "minLength": 10,
                "maxLength": 120
            }
        },
        {
            "type": "select",
            "label": "Type de jouet",
            "name": "type",
            "required": true,
            "options": [
                "Jeu éducatif",
                "Puzzle / casse-tête",
                "Jeu de société",
                "Poupée / Figurine",
                "Voiture / Camion",
                "Jeu de construction (ex: LEGO)",
                "Jeu d’extérieur",
                "Peluches / Doudous",
                "Jouet musical",
                "Autre"
            ]
        },
        {
            "type": "select",
            "label": "Tranche d’âge",
            "name": "ageGroup",
            "required": true,
            "options": [
                "0-6 mois",
                "6-12 mois",
                "1-3 ans",
                "3-6 ans",
                "6-9 ans",
                "9 ans et plus"
            ]
        },
        {
            "type": "text",
            "label": "Marque (optionnel)",
            "name": "brand",
            "required": false,
            "placeholder": "Ex: Fisher Price, LEGO, VTech..."
        },
        {
            "type": "number",
            "label": "Prix (FCFA)",
            "name": "price",
            "required": true,
            "min": 1,
            "step": 100,
            "placeholder": "Ex: 5000"
        },
        {
            "type": "select",
            "label": "État",
            "name": "condition",
            "required": true,
            "options": [
                "Neuf",
                "Très bon état",
                "Bon état",
                "Usagé"
            ]
        },
        {
            "type": "number",
            "label": "Quantité (optionnel)",
            "name": "quantity",
            "required": false,
            "min": 1,
            "placeholder": "Ex: 2"
        },
        {
            "type": "text",
            "label": "Matière (optionnel)",
            "name": "material",
            "required": false,
            "placeholder": "Ex: Plastique, Bois, Tissu..."
        },
        {
            "type": "checkbox",
            "label": "Fonctionnalités",
            "name": "features",
            "required": false,
            "options": [
                "Sons / Musique",
                "Lumières",
                "Fonctionne à piles",
                "Télécommande",
                "Éducatif",
                "Interactif",
                "Résistant à l’eau",
                "Transformable"
            ]
        },
        {
            "type": "file",
            "label": "Photos",
            "name": "photos",
            "multiple": true,
            "accept": "image/*",
            "required": false
        },
        {
            "type": "textarea",
            "label": "Description",
            "name": "description",
            "placeholder": "Ajoutez une description détaillée : état réel, emballage, utilisation, dimensions, etc.",
            "required": false
        }
    ]
}
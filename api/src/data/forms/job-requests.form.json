{
    "slug": "job-requests",
    "fields": [
        {
            "type": "text",
            "label": "Titre de l’annonce",
            "name": "title",
            "placeholder": "Ex: Recherche d’un poste de secrétaire bilingue",
            "required": true,
            "validation": {
                "minLength": 10,
                "maxLength": 120
            }
        },
        {
            "type": "text",
            "label": "Poste souhaité",
            "name": "positionDesired",
            "placeholder": "Ex: Assistant comptable, développeur web...",
            "required": true
        },
        {
            "type": "select",
            "label": "Localisation souhaitée",
            "name": "location",
            "required": true,
            "options": [
                "Abidjan",
                "Bouaké",
                "Yamoussoukro",
                "San Pedro",
                "Autre"
            ]
        },
        {
            "type": "number",
            "label": "Prétentions salariales (FCFA)",
            "name": "salaryExpectations",
            "placeholder": "Ex: 250000",
            "required": true,
            "min": 0,
            "step": 1000
        },
        {
            "type": "select",
            "label": "Expérience",
            "name": "experience",
            "required": true,
            "options": [
                "Aucune",
                "1-2 ans",
                "3-5 ans",
                "5 ans et plus"
            ]
        },
        {
            "type": "select",
            "label": "Niveau d’étude",
            "name": "education",
            "required": true,
            "options": [
                "Aucun diplôme",
                "BEP/CAP",
                "BAC",
                "BAC+2",
                "BAC+3 ou plus"
            ]
        },
        {
            "type": "textarea",
            "label": "Compétences",
            "name": "skills",
            "placeholder": "Ex: Maîtrise de Word/Excel, gestion administrative, PHP/MySQL...",
            "required": true
        },
        {
            "type": "textarea",
            "label": "Expériences professionnelles",
            "name": "workExperience",
            "placeholder": "Ex: 2 ans comme assistant RH chez ABC Corp...",
            "required": true
        },
        {
            "type": "checkbox",
            "label": "Langues parlées",
            "name": "languages",
            "required": false,
            "options": [
                "Français",
                "Anglais",
                "Espagnol",
                "Allemand",
                "Autre"
            ]
        },
        {
            "type": "file",
            "label": "Curriculum Vitae (CV)",
            "name": "cv",
            "accept": ".pdf,.doc,.docx",
            "required": false
        },
        {
            "type": "select",
            "label": "Disponibilité",
            "name": "availability",
            "required": true,
            "options": [
                "Immédiate",
                "Sous 1 semaine",
                "Sous 1 mois",
                "À discuter"
            ]
        }
    ]
}
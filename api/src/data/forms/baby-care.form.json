{
    "slug": "baby-care",
    "fields": [
        {
            "type": "text",
            "label": "Titre de l’annonce",
            "name": "title",
            "placeholder": "Ex: Lot de couches Pampers taille 4 - 50 pièces",
            "required": true,
            "validation": {
                "minLength": 10,
                "maxLength": 120
            }
        },
        {
            "type": "select",
            "label": "Catégorie",
            "name": "category",
            "required": true,
            "options": [
                "Couches",
                "Soins du corps (savons, huiles...)",
                "Hygiène (lingettes, coton...)",
                "Trousse de soin bébé",
                "Thermomètre / Accessoires médicaux",
                "Brosse / Peigne / Coupe-ongles",
                "Anneau de dentition",
                "Autre"
            ]
        },
        {
            "type": "select",
            "label": "Tranche d’âge",
            "name": "ageGroup",
            "required": true,
            "options": [
                "0-3 mois",
                "3-6 mois",
                "6-12 mois",
                "1-2 ans",
                "2-3 ans",
                "3 ans et plus"
            ]
        },
        {
            "type": "text",
            "label": "Marque (optionnel)",
            "name": "brand",
            "required": false,
            "placeholder": "Ex: Pampers, Mustela, Dodie..."
        },
        {
            "type": "number",
            "label": "Prix (FCFA)",
            "name": "price",
            "required": true,
            "min": 1,
            "step": 100,
            "placeholder": "Ex: 7500"
        },
        {
            "type": "number",
            "label": "Quantité (optionnel)",
            "name": "quantity",
            "required": false,
            "min": 1,
            "placeholder": "Ex: 2"
        },
        {
            "type": "text",
            "label": "Taille / Contenance (optionnel)",
            "name": "size",
            "required": false,
            "placeholder": "Ex: Taille 3 / 240 ml / 500g"
        },
        {
            "type": "select",
            "label": "État",
            "name": "condition",
            "required": true,
            "options": [
                "Neuf (emballé)",
                "Neuf (sans emballage)",
                "Comme neuf",
                "Usagé"
            ]
        },
        {
            "type": "checkbox",
            "label": "Caractéristiques",
            "name": "features",
            "required": false,
            "options": [
                "Hypoallergénique",
                "Bio / naturel",
                "Parfumé",
                "Sans parfum",
                "Testé dermatologiquement",
                "Sans parabène",
                "Adapté peaux sensibles",
                "Fabriqué localement"
            ]
        },
        {
            "type": "file",
            "label": "Photos",
            "name": "photos",
            "multiple": true,
            "accept": "image/*",
            "required": false
        },
        {
            "type": "textarea",
            "label": "Description",
            "name": "description",
            "placeholder": "Ajoutez des détails : date d’achat, emballage, conservation, mode d’emploi, etc.",
            "required": false
        }
    ]
}
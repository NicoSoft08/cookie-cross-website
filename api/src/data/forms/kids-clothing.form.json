{
    "slug": "kids-clothing",
    "fields": [
        {
            "type": "text",
            "label": "Titre de l’annonce",
            "name": "title",
            "placeholder": "Ex: Ensemble fille 3-4 ans, parfait état",
            "required": true,
            "validation": {
                "minLength": 10,
                "maxLength": 120
            }
        },
        {
            "type": "checkbox",
            "label": "Taille",
            "name": "size",
            "required": true,
            "options": [
                "0-3 mois",
                "3-6 mois",
                "6-9 mois",
                "9-12 mois",
                "1-2 ans",
                "2-3 ans",
                "3-4 ans",
                "4-5 ans",
                "5-6 ans",
                "6-8 ans",
                "8-10 ans",
                "10-12 ans",
                "12 ans et plus"
            ]
        },
        {
            "type": "radio",
            "label": "Genre",
            "name": "gender",
            "required": true,
            "options": [
                "Fille",
                "Garçon",
                "Mixte"
            ]
        },
        {
            "type": "select",
            "label": "Catégorie",
            "name": "category",
            "required": true,
            "options": [
                "T-shirt / Chemise",
                "Pantalon / Jean",
                "Robe / Jupe",
                "Pull / Sweat",
                "Pyjama",
                "Manteau / Veste",
                "Autre"
            ]
        },
        {
            "type": "text",
            "label": "Marque (optionnel)",
            "name": "brand",
            "required": false,
            "placeholder": "Ex: Zara Kids, Kiabi, H&M..."
        },
        {
            "type": "text",
            "label": "Couleur principale",
            "name": "color",
            "required": true,
            "placeholder": "Ex: Rose, Bleu marine..."
        },
        {
            "type": "number",
            "label": "Prix (FCFA)",
            "name": "price",
            "required": true,
            "min": 1,
            "step": 100,
            "placeholder": "Ex: 3000"
        },
        {
            "type": "select",
            "label": "État",
            "name": "condition",
            "required": true,
            "options": [
                "Neuf avec étiquette",
                "Neuf sans étiquette",
                "Très bon état",
                "Bon état",
                "État moyen"
            ]
        },
        {
            "type": "select",
            "label": "Saison",
            "name": "season",
            "required": true,
            "options": [
                "Toutes saisons",
                "Été",
                "Hiver",
                "Mi-saison"
            ]
        },
        {
            "type": "text",
            "label": "Matière (optionnel)",
            "name": "material",
            "required": false,
            "placeholder": "Ex: Coton, Laine, Polyester..."
        },
        {
            "type": "file",
            "label": "Photos",
            "name": "photos",
            "accept": "image/*",
            "multiple": true,
            "required": false
        },
        {
            "type": "textarea",
            "label": "Description",
            "name": "description",
            "placeholder": "Ajoutez des détails utiles sur le vêtement, son utilisation, s’il taille petit ou grand, etc.",
            "required": false
        }
    ]
}
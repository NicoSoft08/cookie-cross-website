{
    "slug": "house-rent",
    "fields": [
        {
            "type": "text",
            "label": "Titre de l’annonce",
            "name": "title",
            "placeholder": "Ex : Appartement 3 pièces à louer à Yopougon",
            "required": true,
            "validation": {
                "minLength": 10,
                "maxLength": 120
            }
        },
        {
            "name": "propertyType",
            "label": "Type de bien",
            "type": "select",
            "required": true,
            "options": [
                "Appartement",
                "Maison",
                "Studio",
                "Chambre",
                "Autre"
            ]
        },
        {
            "name": "location",
            "label": "Localisation",
            "type": "text",
            "required": true,
            "placeholder": "Ex : Abidjan, Cocody, Marcory, etc."
        },
        {
            "name": "totalArea",
            "label": "Superficie totale (m²)",
            "type": "number",
            "required": true,
            "min": 1
        },
        {
            "name": "rooms",
            "label": "Nombre de pièces",
            "type": "number",
            "required": true,
            "min": 1
        },
        {
            "name": "floor",
            "label": "Étage (si applicable)",
            "type": "text",
            "required": false,
            "placeholder": "Ex : RDC, 1er étage, etc."
        },
        {
            "name": "rentPrice",
            "label": "Loyer mensuel (FCFA)",
            "type": "number",
            "required": true,
            "min": 10000
        },
        {
            "name": "deposit",
            "label": "Caution (FCFA)",
            "type": "number",
            "required": false,
            "min": 0
        },
        {
            "name": "utilities",
            "label": "Charges incluses",
            "type": "select",
            "required": true,
            "options": [
                "Aucune",
                "Eau incluse",
                "Électricité incluse"
            ]
        },
        {
            "name": "leaseTerm",
            "label": "Durée du bail",
            "type": "select",
            "required": true,
            "options": [
                "1 mois",
                "3 mois",
                "6 mois",
                "1 an ou plus"
            ]
        },
        {
            "name": "propertyFeatures",
            "label": "Caractéristiques du bien",
            "type": "checkbox",
            "required": false,
            "options": [
                "Meublé",
                "Climatisation",
                "Balcon / Terrasse",
                "Espace vert / Jardin",
                "Garage",
                "Connexion internet",
                "Sécurité 24h/24",
                "Raccordé à l’eau",
                "Raccordé à l’électricité"
            ]
        },
        {
            "name": "photos",
            "label": "Photos du bien",
            "type": "file",
            "multiple": true,
            "accept": "image/*",
            "required": false
        },
        {
            "name": "description",
            "label": "Description",
            "type": "textarea",
            "required": false,
            "placeholder": "Ex : Quartier calme, accès facile, proche des écoles et commerces..."
        },
        {
            "name": "tenantRequirements",
            "label": "Conditions pour le locataire",
            "type": "checkbox",
            "required": false,
            "options": [
                "Garantie exigée",
                "Pièce d'identité obligatoire",
                "Contrat écrit obligatoire",
                "Pas d’animaux",
                "Personne seule uniquement",
                "Non-fumeur"
            ]
        }
    ]
}
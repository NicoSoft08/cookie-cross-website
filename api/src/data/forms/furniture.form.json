{
    "slug": "furniture",
    "fields": [
        {
            "type": "text",
            "label": "Titre de l’annonce",
            "name": "title",
            "placeholder": "Ex: Canapé 3 places en cuir noir - excellent état",
            "required": true,
            "validation": {
                "minLength": 10,
                "maxLength": 120
            }
        },
        {
            "type": "select",
            "label": "Catégorie",
            "name": "category",
            "required": true,
            "options": [
                "Salon / Séjour",
                "Chambre",
                "Cuisine",
                "Salle de bain",
                "Bureau"
            ]
        },
        {
            "type": "select",
            "label": "Type de meuble",
            "name": "itemType",
            "required": true,
            "options": [
                "Canapé",
                "Fauteuil",
                "Table basse",
                "Table à manger",
                "Chaise",
                "Lit",
                "Matelas",
                "Armoire",
                "Commode",
                "Étagère",
                "Bureau",
                "Meuble TV",
                "Autre"
            ]
        },
        {
            "type": "text",
            "label": "Marque (optionnel)",
            "name": "brand",
            "required": false,
            "placeholder": "Ex: IKEA, Roche Bobois..."
        },
        {
            "type": "number",
            "label": "Prix (FCFA)",
            "name": "price",
            "required": true,
            "min": 1,
            "step": 1000,
            "placeholder": "Ex: 75000"
        },
        {
            "type": "text",
            "label": "Dimensions (optionnel)",
            "name": "dimensions",
            "required": false,
            "placeholder": "Ex: 200x80x75 cm"
        },
        {
            "type": "text",
            "label": "Couleur (optionnel)",
            "name": "color",
            "required": false,
            "placeholder": "Ex: Noir, Chêne clair, Gris anthracite"
        },
        {
            "type": "select",
            "label": "État",
            "name": "condition",
            "required": true,
            "options": [
                "Neuf",
                "Comme neuf",
                "Bon état",
                "À restaurer"
            ]
        },
        {
            "type": "checkbox",
            "label": "Caractéristiques",
            "name": "features",
            "required": false,
            "options": [
                "Bois massif",
                "Fabriqué localement",
                "Design moderne",
                "Convertible",
                "Rangements intégrés",
                "Pliable",
                "Monté (prêt à l’emploi)",
                "Livraison possible"
            ]
        },
        {
            "type": "file",
            "label": "Photos",
            "name": "photos",
            "multiple": true,
            "accept": "image/*",
            "required": false
        },
        {
            "type": "textarea",
            "label": "Description",
            "name": "description",
            "required": false,
            "placeholder": "Ajoutez plus de détails : date d’achat, état exact, usage, matériaux, etc."
        }
    ]
}
{
    "slug": "kitchen",
    "fields": [
        {
            "type": "text",
            "label": "Titre de l’annonce",
            "name": "title",
            "placeholder": "Ex : Batterie de cuisine en inox - 5 pièces",
            "required": true,
            "validation": {
                "minLength": 10,
                "maxLength": 120
            }
        },
        {
            "name": "category",
            "label": "Catégorie",
            "type": "select",
            "required": true,
            "options": [
                "Vaisselle",
                "Ustensiles de cuisine",
                "Accessoires de cuisson",
                "Boîtes de conservation",
                "Préparation culinaire",
                "Art de la table",
                "Autres"
            ]
        },
        {
            "name": "itemType",
            "label": "Type d'article",
            "type": "select",
            "required": true,
            "options": [
                "Poêles et casseroles",
                "Assiettes et bols",
                "Couteaux et râpes",
                "Moules à pâtisserie",
                "Boîtes alimentaires",
                "Verres doseurs",
                "Mixeurs et fouets",
                "Services à thé",
                "Services à café",
                "Autre"
            ]
        },
        {
            "name": "brand",
            "label": "Marque / Fabricant",
            "type": "text",
            "required": false,
            "placeholder": "Ex : Tefal, IKEA, Le Creuset"
        },
        {
            "name": "price",
            "label": "Prix (€)",
            "type": "number",
            "required": true,
            "min": 1,
            "step": 1
        },
        {
            "name": "quantity",
            "label": "Quantité",
            "type": "number",
            "required": false,
            "min": 1
        },
        {
            "name": "material",
            "label": "Matériau",
            "type": "text",
            "required": false,
            "placeholder": "Ex : Inox, Céramique, Verre, Plastique"
        },
        {
            "name": "condition",
            "label": "État",
            "type": "select",
            "required": true,
            "options": [
                "Neuf",
                "Comme neuf",
                "Bon état",
                "Usagé"
            ]
        },
        {
            "name": "features",
            "label": "Caractéristiques",
            "type": "checkbox",
            "required": false,
            "options": [
                "Revêtement antiadhésif",
                "Compatible lave-vaisselle",
                "Résiste à la chaleur",
                "Fermeture hermétique",
                "Multi-usages",
                "Vendu en lot",
                "Écologique",
                "Compatible induction"
            ]
        },
        {
            "name": "photos",
            "label": "Photos",
            "type": "file",
            "multiple": true,
            "accept": "image/*",
            "required": false
        },
        {
            "name": "description",
            "label": "Description",
            "type": "textarea",
            "required": false,
            "placeholder": "Décrivez les caractéristiques, accessoires inclus, défauts éventuels, etc."
        }
    ]
}